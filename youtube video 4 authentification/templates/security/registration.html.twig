{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.username, {'label' : 'Nom d\'utilisateur', 'attr': {'placeholder':'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label' : 'Adresse email', 'attr': {'placeholder':'Adresse email'}}) }}
    {{ form_row(form.password, {'label' : 'Password', 'attr': {'placeholder':'Password'}}) }}
    {{ form_row(form.confirm_password, {'label' : 'Password', 'attr': {'placeholder':'Password'}}) }}
    <button type="submit" class="btn btn-success">
        Inscription
    </button>
    {{ form_end(form) }}

{% endblock %}